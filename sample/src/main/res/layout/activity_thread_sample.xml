<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_thread_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="input thread name"
            android:text="test_thread" />

        <Button
            android:id="@+id/bt_thread_pool"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Thread Pool" />

        <Button
            android:id="@+id/bt_delay_post"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Delay Post" />

        <Button
            android:id="@+id/bt_schedule_rate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Schedule At Rate" />

        <Button
            android:id="@+id/bt_schedule_delay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Schedule With Delay" />

        <TextView
            android:id="@+id/et_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp" />

    </LinearLayout>
</layout>